category:            Data
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     Data.Uncertain
                     , Data.OrdBy
                     , Data.HEP.Cut
                     , Data.HEP.Atlas.CrossSections
                     , Data.HEP.Atlas.Electron
                     , Data.HEP.Atlas.Event
                     , Data.HEP.Atlas.Histograms
                     , Data.HEP.Atlas.Jet
                     , Data.HEP.Atlas.Muon
                     , Data.HEP.Atlas.ProcessInfo
                     , Data.HEP.Atlas.Sample
                     , Data.HEP.Atlas.TopTree
                     , Data.HEP.Atlas.Tree

  -- other-modules:       
  other-extensions:    OverloadedStrings
                     , DeriveGeneric
                     , FlexibleContexts
                     , TupleSections
                     , RankNTypes

  build-depends:       base >=4.8 && <4.9
                     , attoparsec >=0.13 && <0.14
                     , containers >=0.5 && <0.6
                     , vector >=0.11
                     , text >=1.2
                     , aeson >=0.9 && <= 0.10 || >=0.11
                     , conduit >=1.2
                     , conduit-extra >=1.1
                     , bytestring >=0.10
                     , exceptions >=0.8
                     , cereal >=0.5
                     , cereal-text >=0.1
                     , hhep >=0.1

  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -Wall
  ghc-prof-options:    -Wall -prof -auto-all -caf-all


executable jsonToYoda
  main-is:             app/jsonToYoda.hs
  build-depends:       base >=4.8 && <4.9
                     , attoparsec >=0.13 && <0.14
                     , containers >=0.5 && <0.6
                     , vector >=0.11
                     , text >=1.2
                     , aeson >=0.9 && <= 0.10 || >=0.11
                     , conduit >=1.2
                     , conduit-extra >=1.1
                     , bytestring >=0.10
                     , exceptions >=0.8
                     , cereal >=0.5
                     , cereal-text >=0.1
                     , resourcet >=1.1
                     , parallel >=3.0
                     , optparse-generic >=1.0
                     , hhep >=0.1
                     , htop >=0.1

  default-language:    Haskell2010
  ghc-options:         -Wall -threaded
  ghc-prof-options:    -Wall -threaded -prof -auto-all -caf-all
